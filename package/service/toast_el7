# Systemd unit file for tomcat
[Unit]
Description=Start/Stop Toast Server
After=syslog.target network.target

[Service]
Type=forking

User=TOAST_USER

Environment=JAVA_HOME=/usr/local/java
Environment=CATALINA_HOME=/data/apps/tomcat8

ExecStart=/home/TOAST_USER/toaster/toast.sh deploy
ExecStop=/home/TOAST_USER/toaster/toast.sh update

[Install]
WantedBy=multi-user.target
